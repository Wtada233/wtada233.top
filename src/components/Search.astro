---
import Icon from "@components/common/Icon.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import { getLangFromPathname } from "@utils/i18n-runtime";

const currentLang = getLangFromPathname(Astro.url.pathname);
---
<div id="search-container" class="relative">
    <!-- search bar for desktop view -->
    <div id="search-bar" class="hidden lg:flex transition-all items-center h-11 mr-2 rounded-lg
          bg-black/[0.04] hover:bg-black/[0.06] focus-within:bg-black/[0.06]
          dark:bg-white/5 dark:hover:bg-white/10 dark:focus-within:bg-white/10
    ">
        <Icon name="material-symbols:search" class="absolute text-[1.25rem] pointer-events-none ml-3 transition my-auto text-black/30 dark:text-white/30"></Icon>
        <input 
               id="search-input-desktop"
               name="search-desktop"
               placeholder={i18n(I18nKey.search, {}, currentLang)}
               class="transition-all pl-10 text-sm bg-transparent outline-0
             h-full w-40 active:w-60 focus:w-60 text-black/50 dark:text-white/50"
               enterkeyhint="search"
        >
    </div>

    <!-- toggle btn for phone/tablet view -->
    <button aria-label="Search Panel" id="search-switch"
            class="btn-plain scale-animation lg:!hidden rounded-lg w-11 h-11 active:scale-90">
        <Icon name="material-symbols:search" class="text-[1.25rem]"></Icon>
    </button>

    <!-- search panel -->
    <div id="search-panel" class="float-panel float-panel-closed search-panel absolute md:w-[30rem]
    top-20 left-4 md:left-[unset] right-4 shadow-2xl rounded-2xl p-2 z-50">

        <!-- filters container -->
        <div id="search-filters" class="px-2 py-2 mb-2 border-b border-black/5 dark:border-white/5 flex flex-col gap-3 hidden">
        </div>

        <!-- search bar inside panel for phone/tablet -->
        <div id="search-bar-inside" class="flex relative lg:hidden transition-all items-center h-11 rounded-xl
          bg-black/[0.04] hover:bg-black/[0.06] focus-within:bg-black/[0.06]
          dark:bg-white/5 dark:hover:bg-white/10 dark:focus-within:bg-white/10
      ">
            <Icon name="material-symbols:search" class="absolute text-[1.25rem] pointer-events-none ml-3 transition my-auto text-black/30 dark:text-white/30"></Icon>
            <input 
                   id="search-input-mobile"
                   name="search-mobile"
                   placeholder={i18n(I18nKey.search, {}, currentLang)}
                   class="pl-10 absolute inset-0 text-sm bg-transparent outline-0
                   focus:w-60 text-black/50 dark:text-white/50"
                   enterkeyhint="search"
            >
        </div>

        <!-- search results container -->
        <div id="search-results" class="flex flex-col">
        </div>
    </div>
</div>

<style is:global>
  #search-container input:focus {
    outline: 0;
  }
  .search-panel {
    max-height: calc(100vh - 100px);
    overflow-y: auto;
  }
  .search-panel mark {
    background: transparent;
    color: var(--primary);
    font-weight: bold;
  }
</style>

<script>
import { searchConfig } from "@configs/search";
import { siteConfig } from "@configs/site";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import { getRuntimeLanguage } from "@utils/i18n-runtime";
import { getPostUrlBySlug, url } from "@utils/url-utils.ts";
import FlexSearch from "flexsearch";

function initSearch() {
    const container = document.getElementById('search-container');
    const inputDesktop = document.getElementById('search-input-desktop') as HTMLInputElement;
    const inputMobile = document.getElementById('search-input-mobile') as HTMLInputElement;
    const searchSwitch = document.getElementById('search-switch');
    const panel = document.getElementById('search-panel');
    const resultsContainer = document.getElementById('search-results');
    const filtersContainer = document.getElementById('search-filters');

    if (!container || !panel || !resultsContainer || !filtersContainer || container.dataset.initialized) return;
    container.dataset.initialized = "true";

    let initialized = false;
    let index: any;
    let rawData: any[] = [];
    let currentLang = getRuntimeLanguage();
    const defaultLang = siteConfig.lang;
    let activeFilters: Record<string, string> = {};
    let searchTerm = "";
    let debounceTimeout: any;

    const escapeHtml = (unsafe: string) => {
        return unsafe
            .replaceAll("&", "&amp;")
            .replaceAll("<", "&lt;")
            .replaceAll(">", "&gt;")
            .replaceAll('"', "&quot;")
            .replaceAll("'", "&#039;");
    };

    const getPostTranslation = (item: any) => {
        return item.translations[currentLang] || item.translations[defaultLang] || Object.values(item.translations)[0];
    };

    const initIndex = async () => {
        if (initialized) return;
        try {
            const response = await fetch(url("/search-index.json"));
            rawData = await response.json();

            index = new FlexSearch.Document({
                document: {
                    id: "slug",
                    index: ["title", "content"],
                    store: true,
                },
                tokenize: "forward",
                cache: true,
            });

            for (const item of rawData) {
                const trans = getPostTranslation(item);
                if (trans) {
                    index.add({
                        slug: item.slug,
                        title: trans.title,
                        content: trans.content,
                    });
                }
            }
            initialized = true;
            renderFilters();
        } catch (e) {
            console.error("Failed to initialize search index:", e);
        }
    };

    const performSearch = async (keyword: string) => {
        searchTerm = keyword;
        if (!initialized) await initIndex();

        const hasActiveFilters = Object.keys(activeFilters).length > 0;
        if (!keyword && !hasActiveFilters) {
            panel.classList.add("float-panel-closed");
            resultsContainer.innerHTML = "";
            return;
        }

        let searchResults = [];
        if (keyword) {
            const rawResults = await index.search(keyword, { enrich: true, suggest: true });
            const matchedSlugs = new Set();
            for (const fieldResult of rawResults) {
                for (const item of fieldResult.result) matchedSlugs.add(item.id);
            }
            searchResults = rawData.filter((item) => matchedSlugs.has(item.slug));
        } else {
            searchResults = [...rawData];
        }

        if (Object.keys(activeFilters).length > 0) {
            searchResults = searchResults.filter((item) => {
                const trans = getPostTranslation(item);
                let match = true;
                if (activeFilters.category && trans.category !== activeFilters.category) match = false;
                if (activeFilters.tag && !trans.tags.includes(activeFilters.tag)) match = false;
                return match;
            });
        }

        const escapeRegExp = (str: string) => {
            return str.split('').map(char => {
                if (['.', '*', '+', '?', '^', '$', '{', '}', '(', ')', '|', '[', ']', '\\'].includes(char)) {
                    return '\\' + char;
                }
                return char;
            }).join('');
        };
        
        resultsContainer.innerHTML = searchResults.length > 0 ? searchResults.map((item) => {
            const trans = getPostTranslation(item);
            let excerpt = escapeHtml(trans.content.substring(0, 150)) + (trans.content.length > 150 ? "..." : "");
            let title = escapeHtml(trans.title);

            if (keyword) {
                const regex = new RegExp(`(${escapeRegExp(keyword)})`, "gi");
                title = title.replace(regex, "<mark>$1</mark>");
                const idx = trans.content.toLowerCase().indexOf(keyword.toLowerCase());
                if (idx !== -1) {
                    const start = Math.max(0, idx - 40);
                    const end = Math.min(trans.content.length, idx + 80);
                    excerpt = (start > 0 ? "..." : "") + escapeHtml(trans.content.substring(start, end)) + (end < trans.content.length ? "..." : "");
                    excerpt = excerpt.replace(regex, "<mark>$1</mark>");
                }
            }

            return `
                <a href="${getPostUrlBySlug(item.slug, currentLang)}"
                   class="transition first-of-type:mt-2 lg:first-of-type:mt-0 group block
               rounded-xl text-lg px-3 py-2 hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)]">
                    <div class="transition text-90 font-bold group-hover:text-[var(--primary)] leading-tight">
                        ${title}
                        <svg class="inline-block transition text-[0.75rem] translate-x-1 text-[var(--primary)] align-middle ml-1 w-3 h-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18l6-6l-6-6"/></svg>
                    </div>
                    <div class="transition text-sm text-50">
                        ${excerpt}
                    </div>
                </a>
            `;
        }).join("") : `
            <div class="transition text-50 text-sm px-3 py-4 text-center">
                ${i18n(I18nKey.noResults, {}, currentLang)}
            </div>
        `;
        panel.classList.remove("float-panel-closed");
    };

    const renderFilters = () => {
        const cats: Record<string, number> = {};
        const ts: Record<string, number> = {};
        for (const item of rawData) {
            const trans = item.translations[currentLang] || item.translations[defaultLang] || Object.values(item.translations)[0];
            if (trans) {
                if (trans.category) cats[trans.category] = (cats[trans.category] || 0) + 1;
                for (const t of trans.tags) ts[t] = (ts[t] || 0) + 1;
            }
        }

        if (Object.keys(cats).length === 0 && Object.keys(ts).length === 0) {
            filtersContainer.classList.add('hidden');
            return;
        }

        const filterHtml = [];
        const generateFilterGroup = (name: string, label: string, options: Record<string, number>) => {
            if (Object.keys(options).length === 0) return "";
            return `
                <div class="flex flex-wrap gap-1.5 items-center">
                    <span class="text-[10px] text-50 font-bold uppercase tracking-wider w-16">${label}:</span>
                    <div class="flex flex-wrap gap-1 flex-1">
                        ${Object.entries(options).map(([val, count]) => `
                            <button 
                                class="text-[11px] px-2 py-0.5 rounded-md transition-all border border-transparent filter-btn
                                ${activeFilters[name] === val 
                                    ? 'bg-[var(--primary)] text-white' 
                                    : 'bg-black/5 dark:bg-white/5 hover:border-[var(--primary)] text-black/50 dark:text-white/50'}"
                                data-filter="${name}" data-value="${val}"
                            >
                                ${val} <span class="opacity-50 ml-0.5">(${count})</span>
                            </button>
                        `).join("")}
                    </div>
                </div>
            `;
        };

        filterHtml.push(generateFilterGroup("category", i18n(I18nKey.categories, {}, currentLang), cats));
        filterHtml.push(generateFilterGroup("tag", i18n(I18nKey.tags, {}, currentLang), ts));

        if (Object.keys(activeFilters).length > 0) {
            filterHtml.push(`
                <button id="clear-filters" class="text-[10px] uppercase font-bold text-[var(--primary)] hover:underline self-end">
                    ${i18n(I18nKey.clearAll, {}, currentLang)}
                </button>
            `);
        }

        filtersContainer.innerHTML = filterHtml.join("");
        filtersContainer.classList.remove('hidden');

        filtersContainer.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const name = (btn as HTMLElement).dataset.filter!;
                const val = (btn as HTMLElement).dataset.value!;
                if (activeFilters[name] === val) delete activeFilters[name];
                else activeFilters[name] = val;
                performSearch(searchTerm);
                renderFilters();
            });
        });

        filtersContainer.querySelector('#clear-filters')?.addEventListener('click', () => {
            activeFilters = {};
            performSearch(searchTerm);
            renderFilters();
        });
    };

    const handleInput = (e: Event) => {
        const val = (e.target as HTMLInputElement).value;
        searchTerm = val;
        if (inputDesktop) inputDesktop.value = val;
        if (inputMobile) inputMobile.value = val;
        
        clearTimeout(debounceTimeout);
        debounceTimeout = setTimeout(() => performSearch(val), searchConfig.debounce);
    };

    inputDesktop?.addEventListener('input', handleInput);
    inputMobile?.addEventListener('input', handleInput);
    inputDesktop?.addEventListener('focus', () => performSearch(searchTerm));
    searchSwitch?.addEventListener('click', () => {
        panel.classList.toggle("float-panel-closed");
        if (!panel.classList.contains("float-panel-closed")) inputMobile?.focus();
    });

    const handleClickOutside = (e: MouseEvent) => {
        if (!container.contains(e.target as Node) && !panel.contains(e.target as Node)) {
            panel.classList.add("float-panel-closed");
        }
    };

    document.addEventListener('click', handleClickOutside);
    
    // Cleanup reference
    const cleanupSelf = () => {
        document.removeEventListener('click', handleClickOutside);
        index = null;
        rawData = [];
    };
    (container as any)._cleanupSearch = cleanupSelf;
}

const cleanupSearch = () => {
    const container = document.getElementById('search-container');
    if (container && (container as any)._cleanupSearch) {
        (container as any)._cleanupSearch();
    }
}

import { setupComponent } from "@utils/lifecycle";
setupComponent('Search', initSearch, cleanupSearch);
</script>