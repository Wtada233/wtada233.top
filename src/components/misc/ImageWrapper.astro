---
import { Image } from "astro:assets";
import { resolveImage } from "@utils/image-utils";
import { url } from "@utils/url-utils";
import type { ImageMetadata } from "astro";

interface Props {
	id?: string;
	src: string;
	class?: string;
	alt?: string;
	position?: string;
	basePath?: string;
	loading?: "eager" | "lazy";
	decoding?: "async" | "sync" | "auto";
	width?: number;
	height?: number;
}

const { id, src, alt, position = "center", basePath = "/", loading = "lazy", decoding = "async", width, height } = Astro.props;
const className = Astro.props.class;

const isLocal = !(src.startsWith("/") || src.startsWith("http") || src.startsWith("https") || src.startsWith("data:"));
const isPublic = src.startsWith("/");

let img: ImageMetadata | undefined;
if (isLocal) {
	img = await resolveImage(src, basePath);
}

const imageClass = "w-full h-full object-cover";
const imageStyle = `object-position: ${position}`;
---
<div id={id} class:list={[className, 'overflow-hidden relative']}>
    <div class="transition absolute inset-0 dark:bg-black/10 bg-opacity-50 pointer-events-none"></div>
    {isLocal && img && <Image src={img} alt={alt || ""} class={imageClass} style={imageStyle} widths={[480, 768, 1024, 1280]} format="webp" loading={loading} decoding={decoding} width={width} height={height} />}
    {!isLocal && <img src={isPublic ? url(src) : src} alt={alt || ""} class={imageClass} style={imageStyle} loading={loading} decoding={decoding} width={width} height={height} />}
    <slot />
</div>