---
import Icon from "@components/common/Icon.astro";
import { siteConfig } from "@configs/site";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts } from "@utils/content-utils";
import { formatDateToYYYYMMDD } from "@utils/date-utils";
import { SUPPORTED_LANGUAGES, type SupportedLanguage } from "@utils/i18n-runtime";
import { getPostUrlBySlug, url } from "@utils/url-utils";
import I18nKey from "@/i18n/i18nKey";
import { i18n } from "@/i18n/translation";

export async function getStaticPaths() {
	return SUPPORTED_LANGUAGES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const currentLang = lang as SupportedLanguage;
const defaultLang = siteConfig.lang as SupportedLanguage;

const posts = await getSortedPosts();
const recentPosts = posts.slice(0, 6);
---

<MainGridLayout title={i18n(I18nKey.rss, {}, currentLang)} description={i18n(I18nKey.rssDescription, {}, currentLang)} lang={currentLang}>
    <div class="onload-animation">
        <!-- RSS 标题和介绍 -->
        <div class="card-base rounded-[var(--radius-large)] p-8 mb-6">
            <div class="text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-[var(--primary)] rounded-2xl mb-4">
                    <Icon name="material-symbols:rss-feed" class="text-white text-3xl" />
                </div>
                <h1 class="text-3xl font-bold text-[var(--primary)] mb-3">{i18n(I18nKey.rss, {}, currentLang)}</h1>
                <p class="text-75 max-w-2xl mx-auto">
                    {i18n(I18nKey.rssSubtitle, {}, currentLang)}
                </p>
            </div>
        </div>

        <!-- RSS 链接复制区域 -->
        <div class="card-base rounded-[var(--radius-large)] p-6 mb-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-[var(--primary)] rounded-xl flex items-center justify-center mr-4">
                        <Icon name="material-symbols:link" class="text-white text-xl" />
                    </div>
                    <div>
                        <h3 class="font-semibold text-90 mb-1">{i18n(I18nKey.rssLink, {}, currentLang)}</h3>
                        <p class="text-sm text-75">{i18n(I18nKey.rssCopyToReader, {}, currentLang)}</p>
                    </div>
                </div>
                                        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
                                            <code class="bg-[var(--card-bg)] px-3 py-2 rounded-lg text-sm font-mono text-75 border border-[var(--line-divider)] break-all">
                                                {new URL(url('rss.xml', currentLang), Astro.site)}
                                            </code>
                                            <button 
                                                id={`copy-rss-btn-${currentLang}`}
                                                class="copy-rss-btn px-4 py-2 bg-[var(--primary)] text-white rounded-lg hover:opacity-80 transition-all duration-200 font-medium text-sm whitespace-nowrap"
                                                data-url={new URL(url('rss.xml', currentLang), Astro.site)}
                                                data-copied-text={i18n(I18nKey.rssCopied, {}, currentLang)}
                                                data-failed-text={i18n(I18nKey.rssCopyFailed, {}, currentLang)}
                                            >
                                                {i18n(I18nKey.rssCopyLink, {}, currentLang)}
                                            </button>
                                        </div>            </div>
        </div>

        <!-- 最新文章预览 -->
        <div class="card-base rounded-[var(--radius-large)] p-6 mb-6">
            <h2 class="text-xl font-bold text-90 mb-4 flex items-center">
                <Icon name="material-symbols:article" class="mr-2 text-[var(--primary)]" />
                {i18n(I18nKey.rssLatestPosts, {}, currentLang)}
            </h2>
            <div class="space-y-4">
                {recentPosts.map((post) => {
                    const trans = post.translations[currentLang] || post.translations[defaultLang] || Object.values(post.translations)[0];
                    return (
                        <article class="bg-[var(--card-bg)] rounded-xl p-4 border border-[var(--line-divider)] hover:border-[var(--primary)] transition-all duration-300">
                            <h3 class="text-lg font-semibold text-90 mb-2 hover:text-[var(--primary)] transition-colors">
                                <a href={getPostUrlBySlug(post.slug, currentLang)} class="hover:underline">
                                    {trans?.data.title || post.data.title}
                                </a>
                            </h3>
                            {(trans?.data.description || post.data.description) && (
                                <p class="text-75 mb-3 line-clamp-2">
                                    {trans?.data.description || post.data.description}
                                </p>
                            )}
                            <div class="flex items-center gap-4 text-sm text-60">
                                <time datetime={post.data.published.toISOString()} class="text-75">
                                    {formatDateToYYYYMMDD(post.data.published)}
                                </time>
                            </div>
                        </article>
                    );
                })}
            </div>
        </div>

        <!-- RSS 说明 -->
        <div class="card-base rounded-[var(--radius-large)] p-6">
            <h2 class="text-xl font-bold text-90 mb-4 flex items-center">
                <Icon name="material-symbols:help-outline" class="mr-2 text-[var(--primary)]" />
                {i18n(I18nKey.rssWhatIsRSS, {}, currentLang)}
            </h2>
            <div class="text-75 space-y-3">
                <p>
                    {i18n(I18nKey.rssWhatIsRSSDescription, {}, currentLang)}
                </p>
                <ul class="list-disc list-inside space-y-1 ml-4">
                    <li>{i18n(I18nKey.rssBenefit1, {}, currentLang)}</li>
                    <li>{i18n(I18nKey.rssBenefit2, {}, currentLang)}</li>
                    <li>{i18n(I18nKey.rssBenefit3, {}, currentLang)}</li>
                    <li>{i18n(I18nKey.rssBenefit4, {}, currentLang)}</li>
                </ul>
                <p class="text-sm">
                    {i18n(I18nKey.rssHowToUse, {}, currentLang)}
                </p>
            </div>
        </div>
    </div>

    <script>
        function initRssCopy() {
            const copyBtns = document.querySelectorAll('.copy-rss-btn');
            copyBtns.forEach(btn => {
                const htmlBtn = btn as HTMLElement;
                const newBtn = htmlBtn.cloneNode(true) as HTMLElement;
                htmlBtn.parentNode?.replaceChild(newBtn, htmlBtn);
                
                newBtn.addEventListener('click', async function(this: HTMLElement) {
                    const url = this.getAttribute('data-url');
                    if (!url) return;
                    try {
                        await navigator.clipboard.writeText(url);
                        const originalText = this.textContent;
                        this.textContent = this.getAttribute('data-copied-text') || '';
                        this.style.backgroundColor = 'var(--success-color, #10b981)';
                        
                        setTimeout(() => {
                            this.textContent = originalText;
                            this.style.backgroundColor = '';
                        }, 2000);
                    } catch (err) {
                        console.error('复制失败:', err);
                        const originalText = this.textContent;
                        this.textContent = this.getAttribute('data-failed-text') || '';
                        setTimeout(() => {
                            this.textContent = originalText;
                        }, 2000);
                    }
                });
            });
        }
        
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initRssCopy);
        } else {
            setTimeout(initRssCopy, 0);
        }
        
        if (typeof window !== 'undefined' && (window as any).swup) {
            (window as any).swup.hooks.on('content:replace', () => {
                setTimeout(initRssCopy, 100);
            });
        }
    </script>
</MainGridLayout>
